
[colors]
background = ${xrdb:background:#000}
background-alt = ${xrdb:background:#000}
foreground = ${xrdb:foreground:#000}
foreground-alt = ${xrdb:foreground:#000}
primary = ${xrdb:color4:#000}
secondary = ${xrdb:color4:#000}
alert = ${xrdb:color1:#000}

[bar/archpc-i3]
monitor = ${env:MONITOR:}
width = 100%
height = 27
offset-x = 1%
offset-y = 1%
radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = "Gohu GohuFont:pixelsize=14;1"

modules-left = i3
modules-center =
modules-right = volume date

tray-position = right
tray-padding = 2
tray-transparent = true

